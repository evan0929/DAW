<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ColoristFragment"
    android:background="#f2f2f2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/search_back">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="色     号："
                android:textSize="18sp"
                android:textColor="#999999"
                android:id="@+id/color"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="色     值："
                android:textSize="18sp"
                android:textColor="#999999"
                android:id="@+id/colorValue"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="颜色描述："
                android:textSize="18sp"
                android:textColor="#999999"
                android:id="@+id/colorDes"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/colorInfo">


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="色号校验："
                    android:textSize="18sp"
                    android:textColor="#999999"
                    android:id="@+id/colorCheck"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="内容色号+色值+生成时间"
                    android:textSize="18sp"
                    android:textColor="#999999"
                    android:id="@+id/info"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center_vertical"/>


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/return_right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="上传配方"
                android:textSize="18sp"
                android:textColor="#999999"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:text="上传配方"
                    android:textSize="18sp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/peif_back"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="上传图片"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#999999"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="上传对比图片"
                android:textSize="18sp"
                android:textColor="#999999"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:text="上传配方"
                    android:textSize="18sp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/ic_launcher"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="上传图片"
                    android:textSize="18sp"
                    android:textColor="#00B68A"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/search_back"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                    android:textColor="#999999"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999999"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:id="@+id/remakeView"
                    >

                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/edit_back"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:hint="特殊需求请备注"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/search_back"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:text="更多"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:background="@drawable/more_back"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="保存"
                    android:background="@drawable/save_back"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="打印"
                    android:background="@drawable/add_back"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="提交"
                    android:background="@drawable/add_back"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>